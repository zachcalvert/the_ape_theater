{% load page_tags %}
{
    "id": "{{ widget.id }}",
    "type": "{{ widget.display_type }}",
    "name": "{{ widget.name }}",
    {% if widget.source.type %}
        "group_type": "{{ widget.source.type|lower }}",
    {% endif %}
    "item_type": "{{ widget.item_type }}",
    "title": "{{ widget.name|escapejs }}",

    "items": [
        {% for item in widget.items %}
            {% include widget.item_template_name %}{% loopcomma %}
        {% endfor %}
    ]
}